<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/container_user_theme_list_fragment">
    <RelativeLayout
        android:id="@+id/text_nodes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_head"
            style="@style/setting_card_field"
            android:layout_marginTop="4dp" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_head"
                android:text="@string/label_head" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_head"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_neck"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_head" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_neck"
                android:text="@string/label_neck" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_neck"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_arm_left"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_neck" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_arm_left"
                android:text="@string/label_arm_left" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_arm_left"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_arm_right"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_arm_left" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_arm_right"
                android:text="@string/label_arm_right" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_arm_right"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_hand_left"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_arm_right" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_hand_left"
                android:text="@string/label_hand_left" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_hand_left"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_hand_right"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_hand_left" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_hand_right"
                android:text="@string/label_hand_right" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_hand_right"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_torso"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_hand_right" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_torso"
                android:text="@string/label_torso" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_torso"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_stomach"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_torso" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_stomach"
                android:text="@string/label_stomach" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_stomach"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_thigh_left"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_stomach" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_thigh_left"
                android:text="@string/label_thigh_left" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_thigh_left"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_thigh_right"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_thigh_left" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_thigh_right"
                android:text="@string/label_thigh_right" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_thigh_right"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_foot_left"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_thigh_right" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_foot_left"
                android:text="@string/label_foot_left" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_foot_left"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_foot_right"
            style="@style/setting_card_field"
            android:layout_below="@+id/card_foot_left" >

            <TextView
                style="@style/setting_label"
                android:id="@+id/label_foot_right"
                android:text="@string/label_foot_right" />

            <EditText
                style="@style/setting_input"
                android:id="@+id/input_foot_right"
                android:hint="@string/default_decimal_hint" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/container_user_theme_list_fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:onClick="saveEnteredData"
            android:text="@string/button_send" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_new_userTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saveButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/add_userTheme"
            android:src="@drawable/ic_baseline_add_24"
            app:backgroundTint="@android:color/holo_green_light" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_delete_userTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fab_new_userTheme"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/add_userTheme"
            android:onClick="deleteSelectedUserTheme"
            android:src="@drawable/ic_baseline_delete_forever_24"
            app:backgroundTint="@android:color/holo_red_light" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container_user_theme_list_fragment"
        android:layout_width="356dp"
        android:layout_height="104dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />


</RelativeLayout>